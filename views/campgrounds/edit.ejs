<% layout('/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class='mb-3' >
                <label class="form-label"  for="title">Title</label>
                <input class="form-control" type="text" id="title" value="<%= campground.title %>" name="campground[title]" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="location">location</label>
                <input class="form-control" type="text" value="<%= campground.location %>" id="location" name="campground[location]" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" value="<%= campground.image %>" id="image" name="campground[image]" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3" name="campground[description]" required><%= campground.description %></textarea>
                <div class="valid-feedback">Looks Good</div>
            </div>
              <div class="mb-3">
                  <label for="price">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">â‚¹(INR)</span>
                    <input type="text" id="name" name="campground[price]" value="<%= campground.price %>" required class="form-control" placeholder="0"  aria-label="price" aria-describedby="price-label">
                  </div>                  
              </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </form>
    </div>
</div>


